/* Import Open Sans font */
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i&display=swap");

html{
  scroll-padding-top: 40px; /* height of sticky header, because the header hides the content when jumping to it */
}
body {
  font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans",
    "Helvetica Neue", sans-serif;
  max-width: 100vw;
  overflow-x: hidden;
}

h1 {
  font-size: 42px;
  color: $titleColor;
  font-weight: 900;
}
h2 {
  font-size: 30px;
  color: $titleColor;
  font-weight: 700;
  padding-top: 40px;
}
h3 {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 2px;
  color: $titleColor;
}

p {
  font-size: 16px;
}

.page {
  min-height: 80vh;
  
  a {
    text-decoration: underline
  }
}

a.action-button{
  display inline-block
  font-size 1rem
  height: 4rem;
  display: flex;
  align-items: center;
  color: $accentColor;
  background-color white
  padding: 0.4rem 2.6rem;
  border-radius: 100px;
  transition background-color .05s ease
  box-sizing border-box
  font-weight: bold

  &.secondary{
    border: 2px solid $accentColor;
    background: transparent;
    color: white;
    border-color: white;
  }

  &.third{
    height: 2.5rem;
    border: 2px solid $accentColor;
    color: white;
    background: $accentColor;
    border-color: $accentColor;
    text-decoration: none;
  }

  &:hover{
    background-color: lighten($accentColor, 35%)
    border-color: white;
    color: white;
  }
}

// Form 
#mc-embedded-subscribe-form input[type="checkbox"] {
  display: flex;
  width: auto;
  margin-right: 10px;
}
#mergeRow-gdpr {
  margin-top: 20px;

  .checkbox{
    display: flex !important;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10px;

    input[type="checkbox"] {
      margin-right: 10px;
      flex: 0;
      width: 20px;
    }
  }
}
#mc-embedded-subscribe-form .mc_fieldset {
  border: none;
  min-height: 0px;
  padding-bottom: 0px;
}
#mc-embedded-subscribe {
  background: linear-gradient(45deg, $accentColor, $accentColor2);
  color: #fff;
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  width: 100%;
  transition: transform 0.2s ease, box-shadow 0.1s ease;
  margin-top: 20px;
}
#mc-embedded-subscribe:hover {
  /* 3D effect */
  transform: translateY(-1px) scale(1.02) rotate(0.1deg);
  box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.3);
}